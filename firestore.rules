rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // قواعد المستخدمين - المستخدم يمكنه قراءة وتعديل بياناته فقط
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // قواعد التحقق من الإيميل - للقراءة والكتابة من الخدمات فقط
    match /emailVerifications/{email} {
      allow read, write: if request.auth != null;
      allow create: if true; // السماح بإنشاء رمز تحقق للجميع
    }
    
    // قواعد الطلبات والفواتير - المستخدم يمكنه قراءة طلباته فقط
    match /orders/{orderId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // قواعد الكوبونات - قراءة فقط للمستخدمين
    match /coupons/{couponId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        ('admin' in request.auth.token) || 
        ('owner' in request.auth.token);
    }
    
    // قواعد الخوادم والخطط - قراءة فقط للجميع
    match /servers/{serverId} {
      allow read: if true;
      allow write: if request.auth != null && 
        ('admin' in request.auth.token) || 
        ('owner' in request.auth.token);
    }
    
    // منع الوصول لأي مجموعات أخرى
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
